<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             StartupUri="Login/LoginWindow.xaml">
    <Application.Resources>
        <local:CallTypeCollection x:Key="CallTypeCollectionKey" />
        <local:NullToCollapsedConverter x:Key="NullToCollapsedConverter" />
        <local:CallStatusCollection x:Key="CallStatusCollectionKey" />
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <local:NullToTrueConverter x:Key="NullToTrueConverter" />
        <local:DistanceTypeCollection x:Key="DistanceTypeCollectionKey" />
        <local:RoleToBooleanConverter x:Key="RoleToBooleanConverter" />
        <local:ConvertUpdateToVisible x:Key="ConvertUpdateToVisibleKey" />
        <local:ConvertUpdateToTrue x:Key="ConvertUpdateToTrueKey"/>
        <local:ConvertUpdateToFalse x:Key="ConvertUpdateToFalseKey" />
        <local:InverseBoolConverter x:Key="InverseBoolConverterKey"/>
        <local:CallStatusAndNeverAssignedToVisibilityConverter x:Key="CallStatusAndNeverAssignedToVisibilityConverter"/>
        <local:CallStatusToVisibilityConverter x:Key="CallStatusToVisibilityConverter"/>
        <!-- Window Background -->
        <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#eaf3fc" Offset="0"/>
            <GradientStop Color="#f7fbff" Offset="1"/>
        </LinearGradientBrush>
    </Application.Resources>
</Application>