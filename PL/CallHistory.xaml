<Window x:Class="PL.CallHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CallHistory" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid VerticalAlignment="Top" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Filter By Call Type:" HorizontalContentAlignment="Center" Grid.Column="0" VerticalAlignment="Top"/>
            <ComboBox 
            SelectedValue="{Binding CallType, Mode=TwoWay}"
            SelectionChanged="comboBoxFilterCallType_SelectionChanged" 
            ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey}}" Grid.Column="1">
        </ComboBox>
        </Grid>
        <DataGrid
            Margin="0,60,0,60"
            ItemsSource="{Binding ClosedCallsList}"
            IsReadOnly ="True" 
            AutoGenerateColumns="False"
  	        EnableRowVirtualization="True"
            RowDetailsVisibilityMode="VisibleWhenSelected"
            SelectedItem="{Binding SelectedCall}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="Call Id" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding CallType}" Header="Call Type" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding FullAddress}" Header="Address" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding OpeningTime}" Header="Opening Time" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding StartTime}" Header="Start Time" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding EndTime}" Header="End Time" Width="Auto"/>
                <DataGridTextColumn Binding="{Binding EndType}" Header="End Type" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
